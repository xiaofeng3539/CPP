#include <iostream>
#include <stack>

int main() {
    std::stack<int> s;

    // 入栈操作
    s.push(10);
    s.push(20);
    s.push(30);

    // 输出栈顶元素
    std::cout << "栈顶元素: " << s.top() << std::endl;  // 输出: 30

    // 出栈操作
    s.pop();
    std::cout << "出栈后栈顶元素: " << s.top() << std::endl;  // 输出: 20

    // 检查栈的大小和是否为空
    std::cout << "栈的大小: " << s.size() << std::endl;  // 输出: 2
    std::cout << "栈是否为空: " << (s.empty() ? "是" : "否") << std::endl;  // 输出: 否

    return 0;
}
